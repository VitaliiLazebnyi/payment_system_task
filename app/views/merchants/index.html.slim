= link_to 'Transactions', transactions_path, class: 'transaction_link'

div.merchants
  div.merchant_titles
    div.id id
    div.name name
    div.description description
    div.email email
    div.status status
    div.total_transaction_sum total_transaction_sum
    div.delete delete

  - @merchants.each do |merchant|
    div.merchant
      div.id=merchant.name
      div.type=merchant.description
      div.amount=merchant.email
      div.status=merchant.active ? 'Active' : 'Inactive'
      div.total_transaction_sum=merchant.total_transaction_sum
      div.user_id=merchant.type
      = link_to 'Edit', edit_merchant_path(merchant), class: 'merchant_edit_link'
      div.delete=button_to 'Delete', merchant, remote: true, method: :delete
